cxx.std = latest

using cxx
using in

hxx{*}: extension = h
ixx{*}: extension = ipp
txx{*}: extension = tpp
cxx{*}: extension = cpp

hxx{*}: cxx.importable = false

# Every exe{} in this subproject is by default a test
# and tests will not be installed.
#
exe{*}:
{
  test = true
  install = false
}

# The test target for cross-testing (running tests under Wine, etc).
#
test.target = $cxx.target
